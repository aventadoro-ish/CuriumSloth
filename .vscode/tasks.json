{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "C/C++: g++ build active file",
            "command": "${env:PlatformSpecificCommand}",
            "args": [
                "-g", "${workspaceFolder}/src/*.cpp",
                "-o", "${fileDirname}/${fileBasenameNoExtension}",
                "-I", "${fileDirname}",
            ],
            "options": {
                "cwd": "${env:PlatformSpecificCWD}"
            },
            "problemMatcher": ["$gcc"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger.",
            "windows": {
                "command": "g++.exe",
                "args": [
                    "-g", "${workspaceFolder}/src/*.cpp",
                    "-o", "${workspaceFolder}/output/CuriumSloth.exe",
                    "-I", "${fileDirname}",
                    "-lWs2_32",
                    "-lWinmm"
                ],
                "options": {
                    "cwd": "${workspaceFolder}/output"
                }
            },
            "linux": {
                "command": "/usr/bin/g++",
                "args": [
                    "-g", "${workspaceFolder}/src/*.cpp",
                    "-o", "${workspaceFolder}/output/CuriumSloth.elf",
                    "-I", "${fileDirname}",
                    "-lasound"
                ],
                "options": {
                    "cwd": "/usr/bin"
                }
            }
        },
        {
            "type": "shell",
            "label": "Build and Run Program",
            "dependsOn": "C/C++: g++ build active file",
            "command": "${env:PlatformSpecificCommand}",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [],
            "windows": {
                "command": "${workspaceFolder}/output/CuriumSloth.exe"
            },
            "linux": {
                "command": "${workspaceFolder}/output/CuriumSloth.elf"
            },
            "presentation": { 
                "reveal": "always",
                "panel": "new"
            }
        }
    ]
}